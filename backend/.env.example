# Variables de entorno para Railway
# Copiar estas variables al dashboard de Railway

# Configuración básica
SECRET_KEY=tu-clave-secreta-aqui-muy-larga-y-segura
DEBUG=False

# Base de datos (Railway provee automáticamente DATABASE_URL)
DATABASE_URL=postgresql://user:password@hostname:port/database

# Configuración de hosts
RAILWAY_PUBLIC_DOMAIN=tu-app.railway.app
ALLOWED_HOST=tu-dominio-personalizado.com
FRONTEND_URL=https://tu-frontend.com

# Admin (configurar para crear superusuario)
ADMIN_EMAIL=tu-email@example.com
ADMIN_PASSWORD=tu-password-super-seguro

# Opcional: Configuración de email (para futuro)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-app-password